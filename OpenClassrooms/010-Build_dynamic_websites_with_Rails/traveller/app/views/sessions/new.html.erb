<h1>Sessions#new</h1>
<p>Find me in app/views/sessions/new.html.erb</p>

<%= form_with(scope: :session, url: login_path, local: true) do |form| %>
  <div class="danger">
    <%= flash[:danger] %>
  </div>

  <div class="actions">
    <%= form.label :email %> 
    <%= form.email_field :email %> 

    <%= form.label :password %>
    <%= form.password_field :password %>

    <%= form.submit "Log in"%>
  </div>
<% end %>